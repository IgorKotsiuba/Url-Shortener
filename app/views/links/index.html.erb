<h1>Listing Links</h1>
<div class='panel panel-default'>
  <table class='table'>
    <thead>
      <tr>
        <th>Original URL</th>
        <th>Shorten URL</th>
        <th>Clicks</th>
        <th>Time</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @links.each do |link| %>
        <tr>
          <td><%= link_to truncate(link.original, length: 60), link.original, target: '_blank' %></td>
          <td><%= link_to link.display_slug, link.display_slug, target: '_blank' %></td>
          <td><%= link.clicks %></td>
          <td><%= time_ago_in_words(link.created_at) %> ago</td>
          <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
